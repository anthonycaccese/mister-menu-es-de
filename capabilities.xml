<themeCapabilities>
   
   <themeName>MiSTer Menu</themeName>

   <aspectRatio>16:9</aspectRatio>
   <aspectRatio>16:10</aspectRatio>
   
   <colorScheme name="background-16bit-mountain">
      <label>Crisp Mountain Air (by skeddles)</label>
   </colorScheme>
   <colorScheme name="background-test-pattern">
      <label>Test Pattern</label>
   </colorScheme>
   <colorScheme name="background-pocky-rocky">
      <label>Pocky &amp; Rocky</label>
   </colorScheme>
   <colorScheme name="background-custom">
      <label>Custom</label>
   </colorScheme>

   <transitions name="transitions">
      <label>transitions</label>
      <selectable>false</selectable>
      <systemToSystem>instant</systemToSystem>
      <systemToGamelist>instant</systemToGamelist>
      <gamelistToGamelist>instant</gamelistToGamelist>
      <gamelistToSystem>instant</gamelistToSystem>
      <startupToSystem>instant</startupToSystem>
      <startupToGamelist>instant</startupToGamelist>
   </transitions>
   <suppressTransitionProfiles>
      <entry>builtin-instant</entry>
      <entry>builtin-slide</entry>
      <entry>builtin-fade</entry>
   </suppressTransitionProfiles>

   <variant name="gameScreenShotsOff">
      <label>Screenshots Off</label>
      <selectable>true</selectable>
   </variant>
   <variant name="gameScreenShotsOn">
      <label>Screenshots On</label>
      <selectable>true</selectable>
   </variant>

</themeCapabilities>