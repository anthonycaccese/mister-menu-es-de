         <listFontSize>0.03888889</listFontSize><!-- 28 -->
         <listLineSpacing>1.5</listLineSpacing>
         <helpFontSize>0.03055556</helpFontSize><!-- 22 -->
         <titleFontSize>0.03055556</titleFontSize><!-- 22 -->
      </variables>
   </fontSize>



