<theme>

   <variables>
      <titleFont>./_inc/fonts/RetroGaming.ttf</titleFont>
      <listFont>./_inc/fonts/ArcadePix.ttf</listFont>
      <spacerImage>./_inc/images/space.png</spacerImage>
      <backgroundImage>./_inc/images/system-background-alt.jpg</backgroundImage>
   </variables>

   <view name="system,gamelist">
      <helpsystem name="help">
         <origin>0.5 0</origin>
         <textColor>cccccc</textColor>
         <iconColor>cccccc</iconColor>
         <fontPath>${listFont}</fontPath>
      </helpsystem>
      <image name="header">
         <origin>0 0</origin>
         <path>${spacerImage}</path>
         <color>FFDFDFEE</color>
         <tile>true</tile>
      </image>
      <image name="left-column">
         <origin>0 0</origin>
         <path>${spacerImage}</path>
         <color>FFDFDFEE</color>
         <tile>true</tile>
      </image>
      <image name="right-column">
         <origin>0 0</origin>
         <path>${spacerImage}</path>
         <color>1E0000EE</color>
         <tile>true</tile>
      </image>
      <text name="screen-name">
         <origin>0.5 0.5</origin>
         <rotation>270</rotation>
         <fontPath>${titleFont}</fontPath>
         <color>000000</color>
         <letterCase>uppercase</letterCase>
         <horizontalAlignment>center</horizontalAlignment>
      </text>
      <textlist name="system-list,game-list">
         <origin>0 0</origin>
         <horizontalAlignment>left</horizontalAlignment>
         <fontPath>${listFont}</fontPath>
         <selectorColor>FFDFDF</selectorColor>
         <selectedColor>1E0000</selectedColor>
         <primaryColor>FFDFDF</primaryColor>
         <secondaryColor>FFDFDF</secondaryColor>
         <letterCaseCollections>capitalize</letterCaseCollections>
         <letterCaseGroupedCollections>capitalize</letterCaseGroupedCollections>
         <indicators>ascii</indicators>
         <collectionIndicators>ascii</collectionIndicators>
         <zIndex>100</zIndex>
      </textlist>
   </view>

   <view name="system">
      <textlist name="system-list"></textlist>
      <text name="distribution-name">
         <origin>0 0</origin>
         <text>ES-DE</text>
         <fontPath>${titleFont}</fontPath>
         <color>1E0000</color>
         <letterCase>uppercase</letterCase>
      </text>
      <text name="screen-name">
         <text>Systems</text>
      </text>
      <image name="background-art">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.5</pos>
         <opacity>0.6</opacity>
         <zIndex>1</zIndex>
         <path>${backgroundImage}</path>
      </image>
      <text name="game-list-count">
         <origin>1 0</origin>
         <fontPath>${titleFont}</fontPath>
         <color>1E000099</color>
         <horizontalAlignment>right</horizontalAlignment>
         <systemdata>gamecount_games</systemdata>
      </text>
   </view>

   <view name="gamelist">
      <textlist name="game-list"></textlist>
      <text name="system-name">
         <origin>0 0</origin>
         <text>${system.fullName}</text>
         <fontPath>${titleFont}</fontPath>
         <color>1E0000</color>
         <letterCase>uppercase</letterCase>
      </text>
      <text name="screen-name">
         <text>Games</text>
      </text>
      <image name="game-media">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.5</pos>
         <opacity>0.6</opacity>
         <zIndex>1</zIndex>
      </image>
   </view>

   <variant name="gameScreenShotsOff">
      <view name="gamelist">
         <image name="game-media">
            <path>${backgroundImage}</path>
         </image>
      </view>
   </variant>

   <variant name="gameScreenShotsOn">
      <view name="gamelist">
         <image name="game-media">
            <imageType>screenshot</imageType>
         </image>
      </view>
   </variant>

   <!-- 16:9 Layout -->
   <aspectRatio name="16:9">
      <include>./16-9.xml</include>
   </aspectRatio>

   <!-- 16:9 Layout -->
   <aspectRatio name="16:10">
      <include>./16-10.xml</include>
   </aspectRatio>

</theme>